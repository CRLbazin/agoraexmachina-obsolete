<?xml version="1.0" encoding="iso-8859-1" ?><routes>	<!-- front home -->	<route url="/web/" module="home" action="index" name="accueil"/>	<route url="/web/home" module="home" action="index" name="accueil"/>	<route url="/web/404" module="home" action="redirect404" name="accueil"/>	<!-- admin index -->	<route url="/web/admin" module="admin" action="index" name="administration"/>	<!-- admin technique -->	<route url="/web/admin/zzConfigServer/" module="zzConfigServer" action="admin" name="Configuration du serveur"/>	<route url="/web/admin/zzEntities" module="zzEntities" action="admin" name="gestion des entités"/>		<!-- admin categories -->	<route url="/web/admin/categories" module="instances\categories" action="admin" name="gestion des thèmes"/>	<route url="/web/admin/categories/add" module="instances\categories" action="add" name="ajouter un thème"/>	<route url="/web/admin/categories/edit/([0-9]{1,10})+" module="instances\categories" action="edit" name="Edition d&#39;un thème" vars="categories"/>		<!-- front instances -->	<route url="/web/([0-9]{1,10})+\-[\w\W]+/instances" module="instances" action="index" name="Liste des ateliers" vars="categories"/>	<route url="/web/([0-9]{1,10})+\-[\w\W]+/instances/add" module="instances" action="add" name="Créer un nouvel atelier" vars="categories"/>	<route url="/web/([0-9]{1,10})+\-[\w\W]+/instances/([0-9]{1,10})+\-[\w\W]+" module="instances" action="display" name="Détail de l'atelier" vars="categories,instances"/>	<route url="/web/([0-9]{1,10})+\-[\w\W]+/instances/([0-9]{1,10})+/edit" module="instances" action="edit" name="atelier" vars="categories,instances"/>	<route url="/web/([0-9]{1,10})+\-[\w\W]+/instances/([0-9]{1,10})+/delete" module="instances" action="delete" name="atelier" vars="categories,instances"/>		<!-- admin users -->	<route url="/web/admin/users" module="users" action="admin" name="utilisateurs"/>	<route url="/web/admin/users/add" module="users" action="add" name="Ajout d&#39;un utilisateur"/>	<route url="/web/admin/users/edit/([0-9]{1,10})+" module="users" action="edit" name="Edition d&#39;un utilisateur" vars="users"/>		<!-- front user -->	<route url="/web/users/disconnect" module="users" action="disconnect" />	<route url="/web/users/register" module="users" action="register" name="utilisateurs"/>	<route url="/web/users/private/([0-9]{1,10})+" module="users" action="private" name="utilisateurs" vars="users"/>	<!-- front votes -->	<route url="/web/([0-9]{1,10})+\-[\w\W]+/instances/([0-9]{1,10})+\-[\w\W]+/votes/add" module="instances\votes" action="add" name="votes" vars="categories,instances"/>		<!-- images -->	<route url="/web/img/([\w\W]+)" module="images" action="display" name="Image" vars="path"/></routes>